<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marine"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivYacht"
        android:layout_width="351dp"
        android:layout_height="586dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:alpha="0.7"
        android:rotation="-4"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yachtclub" />

    <TextView
        android:id="@+id/tvContacts"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvRegister"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/register"
        app:layout_constraintEnd_toStartOf="@+id/tvContacts"
        app:layout_constraintTop_toTopOf="@+id/tvContacts" />

    <TextView
        android:id="@+id/tvBuy"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/buy"
        app:layout_constraintEnd_toStartOf="@+id/tvRegister"
        app:layout_constraintTop_toTopOf="@+id/tvRegister" />

    <TextView
        android:id="@+id/tvTrips"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/yachts_trips"
        app:layout_constraintEnd_toStartOf="@+id/tvBuy"
        app:layout_constraintTop_toTopOf="@+id/tvBuy" />

    <Button
        android:id="@+id/btYacht"
        style="@style/text"
        android:textColor="@color/super_teal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="260dp"
        android:alpha="0.5"
        android:background="@drawable/marine"
        android:ellipsize="none"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/our_yachts"
        app:layout_constraintStart_toStartOf="@+id/ivYacht"
        app:layout_constraintTop_toTopOf="@+id/ivYacht" />

</androidx.constraintlayout.widget.ConstraintLayout>